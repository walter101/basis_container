{% extends 'content_base.html.twig' %}

{% block title %}Manage Comments{% endblock %}

{%  block content_class %}
    show-article-container show-article-container-border-green p-3 mt-4
{% endblock %}

{% block content_body %}
<div class="row">
    <div class="col-sm-12">
        <h1>Manage comments ({{ pagination.totalItemCount }})</h1>

        <form>
            <div class="input-group mb-3">
                <input type="text"
                       name="searchquery"
                       class="form-control"
                       value="{{ app.request.query.get('searchquery') }}"
                       placeholder="Search..."
                >
                <div class="input-group-append">
                    <button type="submit"
                            class="btn btn-outline-secondary">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </div>
        </form>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Article</th>
                <th>Author</th>
                <th>Comment</th>
                <th>Created</th>
            </tr>
            </thead>

            <tbody>
            {% for comment in pagination %}
            <tr>
                <td>
                    <a href="{{ path('article_show', {slug: comment.article.slug}) }}" {{ comment.article.id }}>{{ comment.article.slug }}</a></td>
                <td>{{ comment.authorName }}</td>
                <td style="width: 20%">{{ comment.content[:50] }}</td>
                <td>{{ comment.createdAt|ago }}</td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">No results</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
